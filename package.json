{
  "name": "genkitx-misc",
  "version": "0.0.1",
  "description": "Miscellaneous Genkit middleware and utilities",
  "repository": {
    "type": "git",
    "url": "https://github.com/pavelgj/genkitx-misc.git",
  },
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "check": "tsc",
    "compile": "tsup",
    "build:clean": "rimraf ./lib",
    "build": "npm-run-all build:clean check compile",
    "build:watch": "tsup --watch",
    "test": "firebase emulators:exec 'jest --verbose' --config tests/emulator/firebase.json"
  },
  "peerDependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "firebase-admin": "^13.6.0",
    "genkit": "^1.25.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "@genkit-ai/google-genai": "^1.25.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
