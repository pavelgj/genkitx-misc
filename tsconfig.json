{
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "strict": true,
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
